{
  "manifest_version": 3,
  "name": "Split Screen Pro",  
  "version": "1.0",
  "description": "Edge 스타일 분할 화면",
  "permissions": [
    "activeTab",
    "storage", 
    "scripting",
    "tabs",
    "declarativeNetRequest",
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "remove_headers",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}